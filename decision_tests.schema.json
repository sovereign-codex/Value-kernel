{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Value Kernel Decision Tests Schema v1.0.0",
  "type": "object",
  "required": ["kernel_version", "tests"],
  "properties": {
    "kernel_version": {
      "type": "string",
      "const": "v1.0.0"
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "scenario",
          "constraints_evaluated",
          "expected_decision"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^VK-[0-9]{3}$"
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "scenario": {
            "type": "string",
            "minLength": 10
          },
          "constraints_evaluated": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^VK-[0-9]+"
            }
          },
          "expected_decision": {
            "type": "string",
            "enum": ["ALLOW", "DENY", "HALT", "PAUSE", "ESCALATE"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}